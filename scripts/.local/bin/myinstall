#!/usr/bin/env bash

set -euo pipefail

# Ensure pixi is in PATH for remote execution (SSH non-interactive shells don't source .bashrc)
[[ -d "$HOME/.pixi/bin" ]] && export PATH="$HOME/.pixi/bin:$PATH"

WORKSPACE_DIR="$HOME/workspace"
CPP_SCREATCHES_DIR="$WORKSPACE_DIR/cpp/scratches"

readonly RED='\033[0;31m'
readonly GREEN='\033[0;32m'
readonly YELLOW='\033[1;33m'
readonly NC='\033[0m' # No Color
readonly arch=$(uname -m)
case "$arch" in
  x86_64|amd64)
    arch_name="amd64"
    ;;
  aarch64|arm64)
    arch_name="arm64"
    ;;
  *)
    arch_name="unknown"  # Handle other architectures if needed
    ;;
esac

extract() {
  atool -qx "$1"
}

error() {
    echo -e "${RED}Error: ${1}${NC}" >&2
    exit 1
}

warning() {
    echo -e "${YELLOW}Warning: ${1}${NC}" >&2
}

info() {
    echo -e "${GREEN}${1}${NC}"
}

install_package() {
    if command -v sudo >/dev/null 2>&1; then
        sudo apt-get install -y "$@"
    else
        warning "sudo is not available. Attempting to run apt-get without sudo."
        apt-get install -y "$@"
    fi
}

install_from_github() {
    if [ $# -ne 2 ]; then
        echo "install-from-github requires 2 inputs USER/REPO regex" >&2
        return 1
    fi
    curl -s "https://api.github.com/repos/$1/releases" \
      | grep -E "https://github.com/$1/releases/download.*$2" \
      | cut -d':' -f 2,3 \
      | tr -d \" \
      | head -n 1 \
      | wget -i -
}

remove_conda_prefix() {
    local file_path="$1"
    ~/.pixi/bin/pixi run --manifest-path ~/myconfigs/pixi.toml --frozen python -c """
import os
import json

# Load the JSON file
with open(\"${file_path}\", \"r\") as f:
    data = json.load(f)

# Remove all env variables
data[\"env\"] = {}

# Save back to file
with open(\"$file_path\", \"w\") as f:
    json.dump(data, f, indent=2)
"""
}

list_options() {
    grep -E '^[[:space:]]+[a-zA-Z0-9_-]+\)' "$0" | sed 's/)//' | tr -d ' \t' | sort
}

case "${1:-}" in
    core)
        install_package --no-install-recommends \
            parallel \
            python3-venv \
            fswatch \
            software-properties-common \
            python-is-python3 \
            ssh \
            colordiff \
            tree \
            less \
            lsb-release \
            iputils-ping \
            htop \
            python3-pip \
            python3-argcomplete \
            fuse3 \
            libfuse2 \
            p7zip-full \
            zip \
            wget \
            curl \
            file \
            lld \
            make \
            gcc \
            sshfs
        $0 minimal
        ;;

    minimal)
        mkdir -p ~/.local/bin || true
        install_package --no-install-recommends curl ca-certificates wget
        $0 pixi
        $0 pixi-core
        $0 stow
        $0 setup-fish
        $0 repgrep
        $0 uv
        ;;

    nextcloud-sync)
        TMP_DIR=$(mktemp -d -p /tmp install-XXXXXX)
        pushd "$TMP_DIR" || exit 1
        install_from_github nextcloud-releases/desktop "Nextcloud.*x86_64.AppImage"
        chmod +x Nextcloud*.AppImage
        mv Nextcloud*.AppImage ~/.local/bin/nextcloud
        popd || exit 1
        ;;

    obsidian)
        TMP_DIR=$(mktemp -d -p /tmp install-XXXXXX)
        pushd "$TMP_DIR" || exit 1
        install_from_github obsidianmd/obsidian-releases "Obsidian-[0-9]{1,}.[0-9]{1,}.[0-9]{1,}.AppImage"
        chmod +x Obsidian-*.AppImage
        mv Obsidian-*.AppImage ~/.local/bin/obsidian
        popd || exit 1
        ;;

    i3)
        sudo apt install -y i3
        ;;

    docker-compose)
        TMP_DIR=$(mktemp -d -p /tmp install-XXXXXX)
        pushd "$TMP_DIR" || exit 1
        install_from_github docker/compose docker-compose-linux-x86_64
        chmod +x docker-compose-linux-x86_64
        mv docker-compose-linux-x86_64 ~/.local/bin/docker-compose
        popd || exit 1
        ;;

    docker)
        if ! command -v docker &> /dev/null; then
            sudo apt install -y curl
            curl -sSL https://get.docker.com/ | sh
            sudo usermod -aG docker "$(whoami)"
            # newgrp docker
        fi
        $0 docker-compose
        sudo docker run hello-world
        # Nvidia
        # It uses the latest stable version, there's release for sid
        # https://docs.docker.com/engine/install/debian/
        # https://nickjanetakis.com/blog/docker-tip-77-installing-docker-on-debian-unstable
        info "To install nvidia-docker follow: https://docs.nvidia.com/datacenter/cloud-native/container-toolkit/latest/install-guide.html#installation"
        sudo systemctl restart docker
        mkdir -p ~/.bash_completion.d || true
        wget https://raw.githubusercontent.com/docker/cli/master/contrib/completion/bash/docker -O ~/.bash_completion.d/docker
        wget https://raw.githubusercontent.com/docker/compose/master/contrib/completion/bash/docker-compose -O ~/.bash_completion.d/docker-compose
        ;;


    repgrep)
        TMP_DIR=$(mktemp -d -p /tmp install-XXXXXX)
        pushd "$TMP_DIR" || exit 1
        if [ "$(uname -s)" = "Darwin" ]; then
            os="apple-darwin"
        else
            os="unknown-linux-gnu"
        fi
        install_from_github acheronfail/repgrep "repgrep.*$os.tar.gz"
        tar -xzf repgrep* --strip-components=1
        mv rgr ~/.local/bin
        if command -v fish >/dev/null 2>&1; then
          mv complete/rgr.fish ~/.config/fish/completions/
        fi
        popd || exit 1
        ;;

    f3d)
        F3D_VERSION="${2:-3.3.0}"
        mkdir -p ~/.config/f3d
        rm -rf ~/.config/f3d/* 2> /dev/null
        pushd ~/.config/f3d || exit 1
        wget "https://github.com/f3d-app/f3d/releases/download/v${F3D_VERSION}/F3D-${F3D_VERSION}-Linux-x86_64.tar.xz"
        tar xf "F3D-${F3D_VERSION}-Linux-x86_64.tar.xz" --strip-components=1
        rm "F3D-${F3D_VERSION}-Linux-x86_64.tar.xz"
        if command -v fish >/dev/null 2>&1; then
            mkdir -p ~/.config/fish/completions
            cp share/fish/vendor_completions.d/f3d.fish ~/.config/fish/completions/
        fi
        popd || exit 1
        ;;

    lua-lsp)
        mkdir -p ~/.config/lua-lsp
        rm -rf ~/.config/lua-lsp/* 2> /dev/null
        pushd ~/.config/lua-lsp || exit 1
        os="linux-x64"
        if [ "$(uname -s)" = "Darwin" ]; then
            os="darwin-arm64"
        fi
        curl -s https://api.github.com/repos/LuaLS/lua-language-server/releases \
            | grep "browser_download_url" \
            | grep "$os.tar.gz" \
            | cut -d":" -f 2,3 \
            | tr -d \" \
            | head -n 1 \
            | wget -i -
        tar xzf lua-language-server-*
        popd || exit 1
        ;;

    luacheck)
        luarocks install luacheck --local
        ;;

    markdown-lsp)
        install_from_github artempyanykh/marksman marksman-linux-x64
        chmod +x marksman-linux-x64
        mv marksman-linux-x64 ~/.local/bin/marksman
        ;;

    hadolint)
        wget https://github.com/hadolint/hadolint/releases/latest/download/hadolint-Linux-x86_64 -O ~/.local/bin/hadolint
        chmod +x ~/.local/bin/hadolint
        ;;

    linters)
        $0 luacheck
        $0 hadolint
        ;;

    lsps)
        $0 lua-lsp
        $0 markdown-lsp
        $0 xml-lsp
        ;;

    localsend)
        TMP_DIR=$(mktemp -d -p /tmp install-XXXXXX)
        pushd "$TMP_DIR" || exit 1
        install_from_github localsend/localsend "LocalSend-.*-linux-x86-64.AppImage"
        chmod +x LocalSend-*.AppImage
        mv LocalSend-*.AppImage ~/.local/bin/localsend
        popd || exit 1
        ;;

    ghostty)
        TMP_DIR=$(mktemp -d -p /tmp install-XXXXXX)
        pushd "$TMP_DIR" || exit 1
        install_from_github pkgforge-dev/ghostty-appimage "Ghostty-.*$arch.AppImage"
        chmod +x Ghostty-*$arch.AppImage
        mv Ghostty-*$arch.AppImage ~/.local/bin/ghostty
        popd || exit 1
        ;;

    wezterm)
        if [ "$(uname -s)" = "Darwin" ]; then
            brew install --cask wezterm@nightly
        else
            mkdir -p ~/.local/bin
            wget https://github.com/wez/wezterm/releases/download/nightly/WezTerm-nightly-Ubuntu20.04.AppImage -O ~/.local/bin/wezterm
            chmod +x ~/.local/bin/wezterm
            mkdir -p ~/.config/fish/completions && ~/.local/bin/wezterm shell-completion --shell fish > ~/.config/fish/completions/wezterm.fish
            # Install terminfo
            tempfile=$(mktemp)
            curl -o "$tempfile" https://raw.githubusercontent.com/wez/wezterm/master/termwiz/data/wezterm.terminfo
            tic -x -o ~/.terminfo "$tempfile"
            rm "$tempfile"
        fi
        ;;

    xml-lsp)
        TMP_DIR=$(mktemp -d -p /tmp install-XXXXXX)
        pushd "$TMP_DIR" || exit 1
        install_from_github redhat-developer/vscode-xml lemminx-linux.zip
        unzip lemminx-linux.zip
        mv lemminx-linux ~/.local/bin/lemminx
        popd || exit 1
        ;;

    rust)
        if ! command -v rustup &> /dev/null; then
            curl --proto '=https' --tlsv1.3 https://sh.rustup.rs -sSf | sh
            source "$HOME/.cargo/env"
            rustup component add rust-analyzer
        else
            rustup update
        fi
        ;;

    gcloud)
        export GCSFUSE_REPO="gcsfuse-$(lsb_release -c -s)"
        echo "deb [signed-by=/usr/share/keyrings/cloud.google.gpg] https://packages.cloud.google.com/apt cloud-sdk main" | sudo tee -a /etc/apt/sources.list.d/google-cloud-sdk.list
        curl https://packages.cloud.google.com/apt/doc/apt-key.gpg | sudo gpg --yes --dearmor -o /usr/share/keyrings/cloud.google.gpg
        sudo apt-get update && sudo apt-get install -y google-cloud-cli
        gcloud init
        gcloud auth application-default login
        ;;

    uv)
        curl -LsSf https://astral.sh/uv/install.sh | sh
        echo 'uv generate-shell-completion fish | source' >> ~/.config/fish/config.fish
        echo 'uvx --generate-shell-completion fish | source' >> ~/.config/fish/config.fish
        ~/.local/bin/uv tool install ty@latest
        ~/.local/bin/uv tool install huggingface_hub[hf_transfer]
        ~/.local/bin/uv tool install rerun-sdk@latest
        ~/.local/bin/uv tool install hf@latest
        ~/.local/bin/uv tool install pyrefly
        ~/.local/bin/uv tool install maturin
        ~/.local/bin/uv tool install trackio
        ~/.local/bin/rerun analytics disable
        ;;

    pixi)
      mkdir -p ~/.local/bin || true
      [[ ! $(command -v pixi) ]] && curl -fsSL https://pixi.sh/install.sh | bash
      if command -v fish >/dev/null 2>&1; then
	      mkdir -p ~/.config/fish/completions
        ~/.pixi/bin/pixi completion --shell fish > ~/.config/fish/completions/pixi.fish
      fi
      ;;

    mujoco)
        TMP_DIR=$(mktemp -d -p /tmp install-XXXXXX)
        pushd "$TMP_DIR" || exit 1
        MUJOCO_VERSION="3.3.6"
        wget https://github.com/google-deepmind/mujoco/releases/download/"$MUJOCO_VERSION"/mujoco-"$MUJOCO_VERSION"-linux-x86_64.tar.gz -O mujoco.tar.gz
        (
          test -d ~/.mujoco && rm -rf ~/.mujoco || true
        ) && mkdir -p ~/.mujoco
        tar xzf mujoco.tar.gz --strip-components 1 -C ~/.mujoco
        ;;

    zig)
        TMP_DIR=$(mktemp -d -p /tmp install-XXXXXX)
        pushd "$TMP_DIR" || exit 1
        wget -O - https://github.com/marler8997/anyzig/releases/latest/download/anyzig-x86_64-linux.tar.gz | tar xz
        mv zig ~/.local/bin/
        install_from_github zigtools/zls zls-x86_64-linux.tar.xz
        tar xf zls-x86_64-linux.tar.xz
        mv zls ~/.local/bin/zls
        popd || exit 1
        ;;

    protoc)
        PROTOC_VERSION="${2:-33.0}"
        TMP_DIR=$(mktemp -d -p /tmp install-XXXXXX)
        pushd "$TMP_DIR" || exit 1
        wget "https://github.com/protocolbuffers/protobuf/releases/download/v${PROTOC_VERSION}/protoc-${PROTOC_VERSION}-linux-x86_64.zip"
        unzip "protoc-${PROTOC_VERSION}-linux-x86_64.zip" -d protoc
        mv protoc/bin/protoc ~/.local/bin/protoc
        chmod +x ~/.local/bin/protoc
        mkdir -p ~/.local/include
        cp -r protoc/include/google ~/.local/include/
        popd || exit 1
        ;;

    gh)
        gh auth login
        gh extension install github/gh-copilot
        gh config set git_protocol ssh
        ;;

    clang-build-analyzer)
        pushd ~/.local/bin
        install_from_github aras-p/ClangBuildAnalyzer ClangBuildAnalyzer-linux
        mv ClangBuildAnalyzer-linux ClangBuildAnalyzer
        chmod +x ClangBuildAnalyzer
        popd || exit 1
        ;;

    install_from_github)
        if [ $# -ne 3 ]; then
            error "install-from-github requires 2 inputs USER/REPO regex"
        fi
        install_from_github "$2" "$3"
        ;;

    setup_platformio)
        pio system completion install fish
        # https://docs.platformio.org/en/stable/core/installation/udev-rules.html#platformio-udev-rules
        curl -fsSL https://raw.githubusercontent.com/platformio/platformio-core/develop/platformio/assets/system/99-platformio-udev.rules | sudo tee /etc/udev/rules.d/99-platformio-udev.rules
        sudo udevadm control --reload-rules && sudo udevadm trigger
        ;;

    setup-fish)
        rm -rf ~/.config/fish || true
        mkdir -p ~/.config/fish/completions

        echo "source ~/myconfigs/fish/config.fish" > ~/.config/fish/config.fish

        # To be able to source bash scripts
        ~/.pixi/bin/fish -c "curl -sL https://git.io/fisher | source && fisher install edc/bass"
        sudo chsh -s ~/.pixi/bin/fish $USER
        ;;

    unstow)
        pushd ~/myconfigs || exit 1
        stow --target ~ --ignore=.mypy_cache --ignore=.ruff_cache --delete cargo \
                                                                           clangd \
                                                                           i3 \
                                                                           git \
                                                                           neovim \
                                                                           scripts \
                                                                           stylua \
                                                                           tmux \
                                                                           fd \
                                                                           ripgrep \
                                                                           wezterm \
                                                                           yamllint \
                                                                           zathura
        popd || exit 1
        ;;

    stow)
        pixi_path=${PIXI_PATH:-$HOME/.pixi}
        pushd ~/myconfigs || exit 1
        $pixi_path/bin/stow --no-folding --target ~ --ignore=.mypy_cache --ignore=.ruff_cache --stow cargo \
                                                                                      clangd \
                                                                                      git \
                                                                                      scripts \
                                                                                      stylua \
                                                                                      fd \
                                                                                      ripgrep \
                                                                                      yamllint \
                                                                                      codium \
                                                                                      zathura
        $pixi_path/bin/stow --target ~ --ignore=.mypy_cache --ignore=.ruff_cache --stow i3 \
                                                                         wezterm \
                                                                         neovim \
                                                                         tmux \
                                                                         claude
        popd || exit 1
        ;;

    urdf_viz)
        install_package rospack-tools
        TMP_DIR=$(mktemp -d -p /tmp install-XXXXXX)
        pushd "$TMP_DIR" || exit 1
        install_from_github openrr/urdf-viz urdf-viz-$(arch)-unknown-linux-gnu.tar.gz
        extract urdf-viz-$(arch)-unknown-linux-gnu.tar.gz
        mv urdf-viz ~/.local/bin
        popd || exit 1
        ;;

    colcon)
        install_package 'python3-colcon-*' python3-vcstool python3-rosdep
        colcon mixin add default https://raw.githubusercontent.com/colcon/colcon-mixin-repository/master/index.yaml
        colcon mixin update default
        sudo rosdep init
        rosdep update
        ;;

    ros2)
        curl -s https://raw.githubusercontent.com/JafarAbdi/quick-ros2-install/refs/heads/main/install.bash | bash -s -- "${@:2}"
        $0 colcon
        ;;

    bun)
        curl -fsSL https://bun.sh/install | bash
        ;;

    mujoco_simulator)
        wget https://github.com/JafarAbdi/mujoco_simulator/releases/download/continuous/mujoco_simulator-x86_64.AppImage -O ~/.local/bin/mujoco_simulator
        chmod +x ~/.local/bin/mujoco_simulator
        ;;

    feetech_qt)
        wget https://github.com/JafarAbdi/FT_SCServo_Debug_Qt/releases/download/continuous/FT_SCServo-x86_64.AppImage -O ~/.local/bin/feetech_qt
        chmod +x ~/.local/bin/feetech_qt
        ;;

    freecad)
        TMP_DIR=$(mktemp -d -p /tmp install-XXXXXX)
        pushd "$TMP_DIR" || exit 1
        install_from_github FreeCAD/FreeCAD "FreeCAD_.*-conda-Linux-x86_64-.*.AppImage"
        mv FreeCAD_*.AppImage ~/.local/bin/freecad
        chmod +x ~/.local/bin/freecad
        popd || exit 1
        ;;

    meshlab)
        TMP_DIR=$(mktemp -d -p /tmp install-XXXXXX)
        pushd "$TMP_DIR" || exit 1
        install_from_github cnr-isti-vclab/meshlab "MeshLab.*linux.AppImage"
        mv MeshLab*.AppImage ~/.local/bin/meshlab
        chmod +x ~/.local/bin/meshlab
        popd || exit 1
        ;;

    mergiraf)
        TMP_DIR=$(mktemp -d -p /tmp install-XXXXXX)
        pushd "$TMP_DIR" || exit 1
        wget https://codeberg.org/mergiraf/mergiraf/releases/download/latest/mergiraf_$(arch)-unknown-linux-musl.tar.gz
        extract mergiraf_$(arch)-unknown-linux-musl.tar.gz
        mv mergiraf ~/.local/bin/mergiraf
        popd || exit 1
        ;;

    bluetui)
        TMP_DIR=$(mktemp -d -p /tmp install-XXXXXX)
        pushd "$TMP_DIR" || exit 1
        wget https://github.com/pythops/bluetui/releases/latest/download/bluetui-$(arch)-linux-gnu -O ~/.local/bin/bluetui
        chmod +x ~/.local/bin/bluetui
        popd || exit 1
        ;;

    oryx)
        TMP_DIR=$(mktemp -d -p /tmp install-XXXXXX)
        pushd "$TMP_DIR" || exit 1
        wget https://github.com/pythops/oryx/releases/latest/download/oryx-$(arch)-unknown-linux-musl  -O ~/.local/bin/oryx
        chmod +x ~/.local/bin/oryx
        popd || exit 1
        ;;

    # Requires iwd
    # impala)
    #     TMP_DIR=$(mktemp -d -p /tmp install-XXXXXX)
    #     pushd "$TMP_DIR" || exit 1
    #     wget https://github.com/pythops/impala/releases/latest/download/impala-$(arch)-unknown-linux-gnu  -O ~/.local/bin/impala
    #     chmod +x ~/.local/bin/impala
    #     popd || exit 1
    #     ;;

    amp-code)
        curl -fsSL https://ampcode.com/install.sh | bash
        ;;

    claude-code)
        curl -fsSL https://claude.ai/install.sh | bash
        ;;

    setup-codium)
        codium="$HOME/.vscodium/bin/codium"
        if [[ ! -x "$codium" ]]; then
            $0 codium
        fi
        mapfile -d '' vscode_extensions < ~/.config/VSCodium/extensions
        installed_extensions=$("$codium" --list-extensions 2>/dev/null)
        install_extensions=$(comm -13 <(echo "$installed_extensions" | sort) <(printf "%s\n" "${vscode_extensions[@]}" | sort))
        uninstall_extensions=$(comm -23 <(echo "$installed_extensions" | sort) <(printf "%s\n" "${vscode_extensions[@]}" | sort))
        for ext in $install_extensions; do
            "$codium" --install-extension "$ext" --force
        done
        for ext in $uninstall_extensions; do
            "$codium" --uninstall-extension "$ext"
        done
        ;;

    codium)
        TMP_DIR=$(mktemp -d -p /tmp install-XXXXXX)
        pushd "$TMP_DIR" || exit 1
        case "$arch" in
          x86_64|amd64)
            codium_arch="x64"
            ;;
          aarch64|arm64)
            codium_arch="arm64"
            ;;
          *)
            error "Unsupported architecture: $arch"
            ;;
        esac
        codium_version=$(curl -s https://api.github.com/repos/VSCodium/vscodium/releases/latest | grep -oP '"tag_name": "\K[^"]+')
        wget "https://github.com/VSCodium/vscodium/releases/download/${codium_version}/VSCodium-linux-${codium_arch}-${codium_version}.tar.gz"
        (
          test -d ~/.vscodium && rm -rf ~/.vscodium || true
        ) && mkdir -p ~/.vscodium
        tar xzvf VSCodium-linux-${codium_arch}-${codium_version}.tar.gz -C ~/.vscodium
        popd || exit 1
        ;;

    github-ssh-keys)
        read -p "Enter email associated with github account: " email
        ssh-keygen -t rsa -b 4096 -C $email

        # Adding your SSH key to the ssh-agent
        eval $(ssh-agent -s)
        mkdir -p ~/.ssh
        ssh-add ~/.ssh/id_rsa

        xclip -sel clip < ~/.ssh/id_rsa.pub # Linux
        open https://github.com/settings/ssh
        ;;

    nodejs)
        if [ -z "${2:-}" ]; then
            error "nodejs requires a version argument. Usage: $0 nodejs <version>"
        fi
        curl -o- https://fnm.vercel.app/install | bash
        ~/.local/share/fnm/fnm install "$2"
        echo 'fnm env | source' >> ~/.config/fish/config.fish
        curl -fsSL https://get.pnpm.io/install.sh | sh -
        ;;

    mc)
       wget https://dl.min.io/client/mc/release/linux-$arch_name/mc -O ~/.local/bin/mc
       chmod +x ~/.local/bin/mc
       ;;

    remote)
        if [ $# -lt 3 ]; then
            error "remote requires HOST and COMMAND. Usage: $0 remote <host> <command> [args...]"
        fi
        host="$2"
        shift 2
        scp "$0" "$host:/tmp/myinstall"
        ssh -t "$host" "chmod +x /tmp/myinstall && /tmp/myinstall $*; rm -f /tmp/myinstall"
        ;;

    sync-remote)
        if [ $# -lt 2 ]; then
            error "sync-remote requires HOST. Usage: $0 sync-remote <host>"
        fi
        host="$2"
        script_dir="$( cd "$( dirname "$(realpath "${BASH_SOURCE[0]}")" )" &> /dev/null && pwd )"
        myconfigs_dir="$( cd "$script_dir/../../.." && pwd )"
        info "Syncing myconfigs $myconfigs_dir to $host:~/myconfigs/"
        # -v verbose, -u skip newer files on receiver, -a archive mode (recursive + preserve permissions/times/symlinks/owner/group)
        # -S handle sparse files, -H preserve hardlinks, -A preserve ACLs, -X preserve xattrs, -h human readable, -P progress + keep partial
        rsync -vuaSHAXhP \
            --exclude='.pixi' \
            --exclude='.git' \
            --exclude='.venv' \
            --exclude='node_modules' \
            --exclude='__pycache__' \
            "$myconfigs_dir/" "$host:~/myconfigs/"
        ;;

    pixi-core)
        info "Installing core tools..."
        pixi global install git git-lfs stow less file fish openssh ripgrep fd-find fzf bat nvim unzip tmux atool xclip pipe-rename

        pixi_path=${PIXI_PATH:-$HOME/.pixi}
        # https://pixi.sh/latest/global_tools/trampolines/#trampolines
        remove_conda_prefix "$pixi_path"/bin/trampoline_configuration/nvim.json
        remove_conda_prefix "$pixi_path"/bin/trampoline_configuration/tmux.json
        remove_conda_prefix "$pixi_path"/bin/trampoline_configuration/fish.json
        ;;

    pixi-devtools)
        info "Installing dev tools..."
        pixi global install cmake ninja taplo stylua actionlint mergiraf luarocks platformio just prek
        ~/.pixi/bin/just --completions fish > ~/.config/fish/completions/justfile.fish
        ;;

    pixi-build-rust)
        info "Installing Rust build tools..."
        pixi global install mold ccache lld patchelf rattler-build sccache bacon
        ;;

    pixi-debug-profile)
        info "Installing debug/profiling tools..."
        pixi global install gdb lldb valgrind hyperfine nvitop
        ;;

    pixi-network-remote)
        info "Installing network/remote tools..."
        pixi global install mosh iperf
        ;;

    pixi-utils)
        info "Installing utility tools..."
        pixi global install gh yt-dlp jless difftastic numbat please
        ;;

    pixi-all)
        info "Installing all pixi global packages..."
        $0 pixi-core
        $0 pixi-devtools
        $0 pixi-build-rust
        $0 pixi-debug-profile
        $0 pixi-network-remote
        $0 pixi-utils
        info "Done!"
        ;;

    --help)
        list_options
        ;;

    *)
        info "Usage: $(basename "$0") <option>" >&2
        info "Available options:"
        list_options
        exit 1
        ;;
esac
